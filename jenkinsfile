pipeline {
    agent any
    tools {
        maven 'MAVEN_HOME'
        jdk 'JDK_HOME'
    }
    environment {
        MYSQL_HOST = '127.0.0.1'
        AWS_RDS_HOST = 'database-1.c6mmun20ggl3.us-west-2.rds.amazonaws.com'
    }
    stages {
        stage('Criando containers para teste') {
            steps {
                bat 'docker-compose up -d'
            }
        }
        stage('Testando') {
            steps {
                echo 'Realizando testes.'
                script {
                    bat 'mvn test'
                }
            }
        }
        stage('Compilando') {
            steps {
                echo 'Compilando.'
                script {
                    environment {
                        MYSQL_HOST = AWS_RDS_HOST
                    }
                    echo MYSQL_HOST
                    bat 'mvn clean install'
                }
            }
        }
        stage('Parando containers de teste') {
            steps {
                script {
                    bat 'docker-compose down'
                }
            }
        }
        stage('Upload S3') {
            steps {
                echo 'Fazendo upload para a AWS.'
                bat 'aws s3 cp "target/schneiderstream-0.0.1-SNAPSHOT.jar" s3://schneiderstreambucket/schneiderstream-0.0.1-SNAPSHOT.jar'
            }
        }
    // stage('Iniciando instância EC2') {
    //     steps {
    //         echo 'Inciando instância EC2.'
    //         bat 'echo "teste"'
    //     }
    // }
    }
}
