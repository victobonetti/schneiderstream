pipeline {
    agent any
    tools {
        maven 'MAVEN_HOME'
        jdk 'JDK_HOME'
    }
    environment {
        S3_BUCKET = 'schneiderstreambucket'
        JAR_FILE = 'schneiderstream-0.0.1-SNAPSHOT.jar'
    }
    stages {
        stage('Criando ambiente') {
            steps {
                bat 'docker-compose -f docker-compose.test.yml up -d'
            }
        }
        stage('Testando') {
            steps {
                echo 'Realizando testes.'
                script {
                    bat 'mvn test'
                }
            }
        }
        stage('Compilando') {
            steps {
                echo 'Compilando:'
                bat 'mvn clean install -DskipTests'
            }
        }
        stage('Finalizando') {
            steps {
                script {
                    bat 'docker-compose -f docker-compose.test.yml down'
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Fazendo upload para a AWS.'
                script {
                    bat "aws s3 cp 'target/${JAR_FILE}' s3://${S3_BUCKET}/${JAR_FILE}"
                }
            }
        }
    // stage('Iniciando instância EC2') {
    //     steps {
    //         echo 'Inciando instância EC2.'
    //         bat 'echo "teste"'
    //     }
    // }
    }
}
