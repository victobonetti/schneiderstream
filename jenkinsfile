pipeline {
    agent any
    tools {
        maven 'MAVEN_HOME'
        jdk 'JDK_HOME'
    }
    stages {
        stage('Start') {
            steps {
                bat 'docker-compose up -d'
            }
        }
        // stage('Create Tables') {
        //     steps {
        //         bat 'mvn flyway:migrate'
        //     }
        // }
        stage('Test') {
            steps {
                echo 'Realizando testes.'
                script {
                    bat 'mvn test'
                }
            }
        }
        stage('Build') {
            steps {
                echo 'Compilando.'
                script {
                    bat 'mvn clean install'
                }
            }
        }
        stage('Upload') {
            steps {
                echo 'Fazendo upload para a AWS.'
                    bat 'aws s3 cp "target/schneiderstream-0.0.1-SNAPSHOT.jar" s3://schneiderstreambucket/schneiderstream-0.0.1-SNAPSHOT.jar'
            }
        }
    }
}
