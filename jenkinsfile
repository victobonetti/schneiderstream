pipeline {
    agent any
    tools {
        maven 'MAVEN_HOME'
        jdk 'JDK_HOME'
    }
    stages {
        stage('Start') {
            steps {
                bat 'docker-compose up'
                bat 'until docker inspect -f '{{.State.Status}}' $containerName | grep -q 'running'; do sleep 1; done'
            }
        }
        stage('Create Tables') {
            steps {
                bat 'mvn flyway:migrate'
            }
        }
        stage('Test') {
            steps {
                echo 'Realizando testes.'
                script {
                    bat 'mvn test'
                }
            }
        }
        stage('Build') {
            steps {
                echo 'Compilando.'
                script {
                    bat 'mvn clean install'
                }
            }
        }
        stage('Upload') {
            steps {
                echo 'Fazendo upload para a AWS.'
                withAWS(credentials: $AWS_USERID, region: 'us-east-2') {
                    /* groovylint-disable-next-line LineLength */
                    bat 'aws s3 cp "target/schneiderstream-0.0.1-SNAPSHOT.jar" s3://schneiderstreambucket/schneiderstream-0.0.1-SNAPSHOT.jar'
                }
            }
        }
    }
}
