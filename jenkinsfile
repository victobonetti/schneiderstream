pipeline {
    agent any
    tools {
        maven 'MAVEN_HOME'
        jdk 'JDK_HOME'
    }
    stages {
        stage('Start') {
            steps {
                echo 'Iniciando a pipeline.'
                script {
                    bat 'docker build -t mysql:5.7 -f Dockerfile .'
                    bat 'docker run mysql:5.7'
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Realizando testes.'
                script {
                    bat 'mvn test'
                }
            }
        }
        stage('Build') {
            steps {
                echo 'Compilando.'
                script {
                    bat 'mvn clean install'
                }
            }
        }
        stage('Upload') {
            steps {
                echo 'Fazendo upload para a AWS.'
                withAWS(credentials: $AWS_USERID, region: 'us-east-2') {
                    /* groovylint-disable-next-line LineLength */
                    bat 'aws s3 cp "target/schneiderstream-0.0.1-SNAPSHOT.jar" s3://schneiderstreambucket/schneiderstream-0.0.1-SNAPSHOT.jar'
                }
            }
        }
    }
}
